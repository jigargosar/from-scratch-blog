doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title My Simple Blog
    link(rel="stylesheet", href="style.css")
  body
    header
      h1 My Simple Blog
    main
      section#posts
        h2 Recent Posts
        ul
          each post in posts
            li
              a(href=post.url) #{post.title}
    footer
      p &copy; 2025 My Simple Blog
