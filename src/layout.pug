mixin navLink(href, label)
  a.link.white-80.underline-hover.underline-cyan-hover.pa2.mr3(href=href)= label

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title jigar@blog:~$

    // Font pairing
    link(href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Inter:wght@400;700&display=swap", rel="stylesheet")

    // Stylesheets
    link(rel="stylesheet", href="/vendor/css/tachyons.css")

    // Inline style block for custom styling
    style.
      :root {
        --bg: #0f1117;
        --text: #e2e2e2;
        --cyan: #00ffe1;
        --link-hover: #59f1ff;
        --dim: #444;
      }

      /* Custom Tachyons-style color utilities for cyan */
      .cyan {
        color: var(--cyan) !important;
      }
      .bg-cyan {
        background-color: var(--cyan) !important;
      }
      .b--cyan {
        border-color: var(--cyan) !important;
      }
      .hover-cyan:hover {
        color: var(--cyan) !important;
      }
      .hover-bg-cyan:hover {
        background-color: var(--cyan) !important;
      }
      .hover-b--cyan:hover {
        border-color: var(--cyan) !important;
      }
      .underline-cyan-hover:hover {
        text-decoration-color: var(--cyan) !important;
      }

      body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg);
        color: var(--text);
        line-height: 1.6;
        margin: 0;
      }

      h1, h2, h3, .cli-prompt, code, pre {
        font-family: 'JetBrains Mono', monospace;
      }

      .cli-prompt {
        color: var(--cyan);
        font-weight: bold;
        margin-right: 1rem;
      }

      .cursor {
        display: inline-block;
        width: 8px;
        height: 1rem;
        background-color: var(--cyan);
        animation: blink 1s steps(2, start) infinite;
      }

      @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
      }

  body.sans-serif.bg-black-90.white-80.container

    // Header with CLI prompt and nav
    header.flex.justify-center.items-center.pa3.bb.b--dark-gray
      span.cli-prompt jigar@blog:~$
      nav.ml3
        +navLink('/', '[Home]')
        +navLink('/posts', '[Posts]')
        +navLink('/about', '[About]')

    // Main content block
    main.measure-wide.center.ph2
      block content

    // Footer with blinking cursor and credit
    footer.tc.pa3.mt4.bt.b--dark-gray
      p.f7.dark-gray Powered by Pug & Markdown
      span.cursor
