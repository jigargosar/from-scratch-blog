mixin navLink(href, label)
  a.link.white-80.underline-hover.underline-cyan-hover.pa2.mr3(href=href)= label

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title jigar@blog:~$

    // Font pairing
    link(href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Inter:wght@400;700&display=swap", rel="stylesheet")

    // Stylesheets
    link(rel="stylesheet", href="/vendor/css/tachyons.css")
    link(rel="stylesheet", href="/assets/css/cyan-colors.css")
    link(rel="stylesheet", href="/assets/css/intellij-modern-dark-palette.css")

    // Inline style block for custom styling
    style.
      :root {
      }

      .inter {
        font-family: 'Inter', sans-serif;
      }

      .mono {
        font-family: 'JetBrains Mono', monospace;
      }

      .cursor {
        width: 0.5rem;
        height: 1rem;
        animation: blink-cursor 1.5s infinite steps(2, start); /* Adjust duration for the overall cycle speed */

      }
      
      @keyframes blink-cursor {
        0% {
            opacity: 1; /* Cursor starts ON */
        }
        70% {
            opacity: 1; /* Cursor stays ON for most of the animation cycle */
        }
        80% {
            opacity: 0; /* Cursor quickly turns OFF */
        }
        100% {
            opacity: 0; /* Cursor remains OFF for a short period before restarting */
        }
      }

  body.inter.bg-black-90.white-80

    // Header with CLI prompt and nav
    header.flex.justify-center.items-center.pa3.bb.b--dark-gray
      span.fw6.mr3.cyan.mono jigar@blog:~$
      nav.ml3
        +navLink('/', '[Home]')
        +navLink('/posts', '[Posts]')
        +navLink('/about', '[About]')

    // Main content block
    main.measure-wide.center.ph2
      block content

    // Footer with blinking cursor and credit
    footer.tc.pa3.bt.b--dark-gray
      p.ma0.f7.light-silver Powered by Pug & Markdown
      span.cursor.dib.bg-cyan
